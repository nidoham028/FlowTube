<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:background="@android:color/black"
     tools:context=".PlayerActivity">

    <androidx.media3.ui.PlayerView
         android:layout_height="match_parent"
         android:layout_width="match_parent"
         app:use_controller="false"
         android:background="@android:color/black"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         app:resize_mode="fit"
         android:id="@+id/playerView" />

    <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_height="match_parent"
         android:layout_width="match_parent"
         android:visibility="visible"
         android:background="@android:color/transparent"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         android:id="@+id/controlsOverlay">

        <androidx.constraintlayout.widget.ConstraintLayout
             android:layout_height="56dp"
             android:layout_width="0dp"
             android:background="@android:color/transparent"
             app:layout_constraintTop_toTopOf="parent"
             android:paddingVertical="4dp"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             android:paddingHorizontal="8dp"
             android:id="@+id/topControlBar">

            <ImageButton
                 android:layout_height="40dp"
                 android:layout_width="40dp"
                 android:contentDescription="@string/back_button"
                 android:src="@drawable/ic_arrow_back"
                 android:background="?attr/selectableItemBackgroundBorderless"
                 app:layout_constraintTop_toTopOf="parent"
                 app:tint="@android:color/white"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintBottom_toBottomOf="parent"
                 android:id="@+id/btnBack" />

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="0dp"
                 android:ellipsize="end"
                 android:textSize="14sp"
                 android:textColor="@android:color/white"
                 app:layout_constraintStart_toEndOf="@id/btnBack"
                 app:layout_constraintEnd_toStartOf="@id/topActionsGroup"
                 android:gravity="center_vertical"
                 app:layout_constraintTop_toTopOf="parent"
                 android:layout_marginHorizontal="8dp"
                 android:maxLines="1"
                 android:id="@+id/txtTitle"
                 android:textStyle="bold"
                 android:text="Video Title Goes Here" />

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="0dp"
                 android:ellipsize="end"
                 app:layout_constraintStart_toStartOf="@id/txtTitle"
                 android:textSize="11sp"
                 android:textColor="@android:color/darker_gray"
                 app:layout_constraintEnd_toEndOf="@id/txtTitle"
                 app:layout_constraintBottom_toBottomOf="parent"
                 app:layout_constraintTop_toBottomOf="@id/txtTitle"
                 android:maxLines="1"
                 android:id="@+id/txtChannelName"
                 android:text="Channel Name" />

            <LinearLayout
                 android:layout_height="match_parent"
                 android:layout_width="wrap_content"
                 android:gravity="center_vertical"
                 app:layout_constraintTop_toTopOf="parent"
                 android:orientation="horizontal"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintBottom_toBottomOf="parent"
                 android:id="@+id/topActionsGroup">

                <ImageButton
                     android:layout_height="36dp"
                     android:layout_width="36dp"
                     android:layout_marginEnd="4dp"
                     android:contentDescription="@string/cast_button"
                     android:src="@drawable/ic_cast"
                     android:background="?attr/selectableItemBackgroundBorderless"
                     app:tint="@android:color/white"
                     android:id="@+id/btnCast" />

                <ImageButton
                     android:layout_height="36dp"
                     android:layout_width="36dp"
                     android:layout_marginEnd="4dp"
                     android:contentDescription="@string/cc_button"
                     android:src="@drawable/ic_cc"
                     android:background="?attr/selectableItemBackgroundBorderless"
                     app:tint="@android:color/white"
                     android:id="@+id/btnCC" />

                <ImageButton
                     android:layout_height="36dp"
                     android:layout_width="36dp"
                     android:contentDescription="@string/settings_button"
                     android:src="@drawable/ic_settings"
                     android:background="?attr/selectableItemBackgroundBorderless"
                     app:tint="@android:color/white"
                     android:id="@+id/btnSettings" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:gravity="center"
             app:layout_constraintTop_toTopOf="parent"
             android:orientation="horizontal"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             android:id="@+id/centerControls">

            <ImageButton
                 android:layout_height="48dp"
                 android:layout_width="48dp"
                 android:src="@drawable/ic_replay"
                 android:contentDescription="@string/replay_10_seconds"
                 android:scaleType="centerCrop"
                 android:layout_marginEnd="32dp"
                 android:background="?attr/selectableItemBackgroundBorderless"
                 android:padding="8dp"
                 app:tint="@android:color/white"
                 android:id="@+id/btnReplay10" />

            <ImageButton
                 android:layout_height="64dp"
                 android:layout_width="64dp"
                 android:src="@drawable/ic_play_arrow"
                 android:scaleType="centerCrop"
                 android:contentDescription="@string/play_pause_button"
                 android:background="?attr/selectableItemBackgroundBorderless"
                 android:padding="12dp"
                 app:tint="@android:color/white"
                 android:id="@+id/btnPlayPause" />

            <ImageButton
                 android:layout_height="48dp"
                 android:layout_width="48dp"
                 android:scaleType="centerCrop"
                 android:contentDescription="@string/forward_10_seconds"
                 android:src="@drawable/ic_forward"
                 android:background="?attr/selectableItemBackgroundBorderless"
                 android:padding="8dp"
                 app:tint="@android:color/white"
                 android:layout_marginStart="32dp"
                 android:id="@+id/btnForward10" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
             android:layout_height="72dp"
             android:layout_width="0dp"
             android:background="@android:color/transparent"
             android:paddingVertical="8dp"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             android:paddingHorizontal="12dp"
             android:id="@+id/bottomControlBar">

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:gravity="center"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintStart_toStartOf="parent"
                 android:textSize="12sp"
                 android:textColor="@android:color/white"
                 android:minWidth="40dp"
                 android:id="@+id/txtCurrentTime"
                 android:text="00:00" />

            <SeekBar
                 android:layout_height="wrap_content"
                 android:layout_width="0dp"
                 app:layout_constraintTop_toTopOf="@id/txtCurrentTime"
                 android:layout_marginHorizontal="8dp"
                 android:thumbTint="@android:color/holo_red_dark"
                 app:layout_constraintStart_toEndOf="@id/txtCurrentTime"
                 app:layout_constraintEnd_toStartOf="@id/txtTotalTime"
                 android:progressTint="@android:color/holo_red_dark"
                 style="?android:attr/progressBarStyleHorizontal"
                 app:layout_constraintBottom_toBottomOf="@id/txtCurrentTime"
                 android:id="@+id/videoProgress" />

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:gravity="center"
                 app:layout_constraintTop_toTopOf="@id/txtCurrentTime"
                 android:textSize="12sp"
                 android:textColor="@android:color/white"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintBottom_toBottomOf="@id/txtCurrentTime"
                 android:minWidth="40dp"
                 android:id="@+id/txtTotalTime"
                 android:text="00:00" />

            <HorizontalScrollView
                 android:layout_height="wrap_content"
                 android:layout_width="0dp"
                 android:scrollbars="none"
                 android:fadingEdge="horizontal"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintEnd_toStartOf="@id/btnOrientation"
                 android:layout_marginTop="4dp"
                 app:layout_constraintBottom_toBottomOf="parent"
                 android:fadingEdgeLength="16dp"
                 app:layout_constraintTop_toBottomOf="@id/videoProgress"
                 android:id="@+id/actionsScrollView">

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:gravity="center_vertical"
                     android:orientation="horizontal"
                     android:id="@+id/rowActions">

                    <ImageButton
                         android:layout_height="32dp"
                         android:layout_width="wrap_content"
                         android:layout_marginEnd="8dp"
                         android:src="@drawable/ic_like"
                         android:background="?attr/selectableItemBackgroundBorderless"
                         android:paddingHorizontal="12dp"
                         android:minWidth="0dp"
                         android:id="@+id/btnLike" />

                    <ImageButton
                         android:layout_height="32dp"
                         android:layout_width="wrap_content"
                         android:layout_marginEnd="8dp"
                         android:src="@drawable/ic_dislike"
                         android:background="?attr/selectableItemBackgroundBorderless"
                         android:paddingHorizontal="12dp"
                         android:minWidth="0dp"
                         android:id="@+id/btnDislike" />

                    <ImageButton
                         android:layout_height="32dp"
                         android:layout_width="wrap_content"
                         android:layout_marginEnd="8dp"
                         android:src="@drawable/ic_comment"
                         android:background="?attr/selectableItemBackgroundBorderless"
                         android:paddingHorizontal="12dp"
                         android:minWidth="0dp"
                         android:id="@+id/btnComments" />

                    <ImageButton
                         android:layout_height="32dp"
                         android:layout_width="wrap_content"
                         android:layout_marginEnd="8dp"
                         android:src="@drawable/ic_save"
                         android:background="?attr/selectableItemBackgroundBorderless"
                         android:paddingHorizontal="12dp"
                         android:minWidth="0dp"
                         android:id="@+id/btnSave" />

                    <ImageButton
                         android:layout_height="32dp"
                         android:layout_width="wrap_content"
                         android:layout_marginEnd="8dp"
                         android:src="@drawable/ic_share"
                         android:background="?attr/selectableItemBackgroundBorderless"
                         android:paddingHorizontal="12dp"
                         android:minWidth="0dp"
                         android:id="@+id/btnShare" />

                    <ImageButton
                         android:layout_height="32dp"
                         android:layout_width="wrap_content"
                         android:src="@drawable/ic_arrow_more"
                         android:background="?attr/selectableItemBackgroundBorderless"
                         android:paddingHorizontal="12dp"
                         android:minWidth="0dp"
                         android:id="@+id/btnMore" />

                </LinearLayout>

            </HorizontalScrollView>

            <ImageButton
                 android:layout_height="36dp"
                 android:layout_width="36dp"
                 android:contentDescription="@string/orientation_toggle"
                 android:src="@drawable/ic_fullscreen_exit"
                 android:background="?attr/selectableItemBackgroundBorderless"
                 app:layout_constraintTop_toTopOf="@id/actionsScrollView"
                 app:tint="@android:color/white"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintBottom_toBottomOf="@id/actionsScrollView"
                 android:layout_marginStart="8dp"
                 android:id="@+id/btnOrientation" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:visibility="gone"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         android:indeterminateTint="@android:color/white"
         android:id="@+id/loadingIndicator" />

</androidx.constraintlayout.widget.ConstraintLayout>