<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:background="@android:color/black"
     tools:context=".PlayerActivity">

    <com.google.android.exoplayer2.ui.PlayerView
         android:layout_height="0dp"
         android:layout_width="0dp"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         android:id="@+id/playerView">

        <androidx.constraintlayout.widget.ConstraintLayout
             android:layout_height="match_parent"
             android:layout_width="match_parent"
             android:id="@+id/controlsOverlay">

            <ImageButton
                 android:layout_height="56dp"
                 android:layout_width="56dp"
                 android:contentDescription="@string/back_button"
                 android:src="@drawable/ic_arrow_back"
                 android:background="?attr/selectableItemBackgroundBorderless"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintStart_toStartOf="parent"
                 android:layout_marginTop="8dp"
                 android:layout_marginStart="8dp"
                 android:id="@+id/btnBack" />

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="0dp"
                 android:layout_marginEnd="4dp"
                 android:ellipsize="end"
                 android:textSize="16sp"
                 android:textColor="@android:color/white"
                 app:layout_constraintStart_toEndOf="@id/btnBack"
                 app:layout_constraintEnd_toStartOf="@id/btnChevron"
                 app:layout_constraintBottom_toBottomOf="@id/btnBack"
                 android:layout_marginStart="8dp"
                 android:gravity="center_vertical"
                 app:layout_constraintTop_toTopOf="@id/btnBack"
                 android:maxLines="1"
                 android:id="@+id/txtTitle"
                 android:text="Video Title Goes Here" />

            <ImageView
                 android:layout_height="24dp"
                 android:layout_width="24dp"
                 android:src="@drawable/ic_chevron_right"
                 android:layout_marginEnd="8dp"
                 app:layout_constraintTop_toTopOf="@id/txtTitle"
                 app:layout_constraintStart_toEndOf="@id/txtTitle"
                 app:layout_constraintEnd_toStartOf="@id/btnCast"
                 app:layout_constraintBottom_toBottomOf="@id/txtTitle"
                 android:id="@+id/btnChevron" />

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="0dp"
                 android:ellipsize="end"
                 app:layout_constraintStart_toStartOf="@id/txtTitle"
                 android:textSize="14sp"
                 app:layout_constraintEnd_toEndOf="@id/txtTitle"
                 android:textColor="@android:color/darker_gray"
                 app:layout_constraintTop_toBottomOf="@id/txtTitle"
                 android:maxLines="1"
                 android:id="@+id/txtChannelName"
                 android:text="Channel Name" />

            <ImageButton
                 android:layout_height="48dp"
                 android:layout_width="48dp"
                 android:layout_marginEnd="8dp"
                 android:contentDescription="@string/cast_button"
                 android:src="@drawable/ic_cast"
                 android:background="?attr/selectableItemBackgroundBorderless"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintEnd_toStartOf="@id/btnCC"
                 android:layout_marginTop="8dp"
                 android:id="@+id/btnCast" />

            <ImageButton
                 android:layout_height="48dp"
                 android:layout_width="48dp"
                 android:layout_marginEnd="8dp"
                 android:contentDescription="@string/cc_button"
                 android:src="@drawable/ic_cc"
                 android:background="?attr/selectableItemBackgroundBorderless"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintEnd_toStartOf="@id/btnSettings"
                 android:layout_marginTop="8dp"
                 android:id="@+id/btnCC" />

            <ImageButton
                 android:layout_height="48dp"
                 android:layout_width="48dp"
                 android:layout_marginEnd="8dp"
                 android:contentDescription="@string/settings_button"
                 android:src="@drawable/ic_settings"
                 android:background="?attr/selectableItemBackgroundBorderless"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintEnd_toEndOf="parent"
                 android:layout_marginTop="8dp"
                 android:id="@+id/btnSettings" />

            <ImageButton
                 android:layout_height="48dp"
                 android:layout_width="48dp"
                 android:src="@drawable/ic_replay"
                 android:padding="8dp"
                 app:layout_constraintEnd_toStartOf="@id/btnPlayPause"
                 android:layout_marginTop="60dp"
                 app:layout_constraintBottom_toTopOf="@id/videoProgress"
                 android:contentDescription="@string/replay_10_seconds"
                 android:scaleType="centerCrop"
                 android:background="?attr/selectableItemBackgroundBorderless"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintHorizontal_chainStyle="packed"
                 android:id="@+id/btnReplay10" />

            <ImageButton
                 android:layout_height="55dp"
                 android:layout_width="55dp"
                 android:src="@drawable/ic_play_arrow"
                 android:padding="8dp"
                 app:layout_constraintStart_toEndOf="@id/btnReplay10"
                 app:layout_constraintEnd_toStartOf="@id/btnForward10"
                 app:layout_constraintBottom_toBottomOf="@id/btnReplay10"
                 android:scaleType="centerCrop"
                 android:contentDescription="@string/play_pause_button"
                 android:background="?attr/selectableItemBackgroundBorderless"
                 app:layout_constraintTop_toTopOf="@id/btnReplay10"
                 android:layout_marginHorizontal="60dp"
                 android:id="@+id/btnPlayPause" />

            <ImageButton
                 android:layout_height="48dp"
                 android:layout_width="48dp"
                 android:scaleType="centerCrop"
                 android:contentDescription="@string/forward_10_seconds"
                 android:src="@drawable/ic_forward"
                 android:background="?attr/selectableItemBackgroundBorderless"
                 app:layout_constraintTop_toTopOf="@id/btnReplay10"
                 android:padding="8dp"
                 app:layout_constraintStart_toEndOf="@id/btnPlayPause"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintBottom_toBottomOf="@id/btnReplay10"
                 android:id="@+id/btnForward10" />

            <SeekBar
                 android:layout_height="wrap_content"
                 android:layout_width="0dp"
                 android:layout_marginBottom="8dp"
                 android:layout_marginEnd="16dp"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintEnd_toEndOf="parent"
                 style="?android:attr/progressBarStyleHorizontal"
                 android:layout_marginStart="16dp"
                 app:layout_constraintBottom_toTopOf="@id/rowActions"
                 android:id="@+id/videoProgress" />

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="0dp"
                 android:layout_marginBottom="8dp"
                 android:layout_marginEnd="8dp"
                 android:gravity="center_vertical"
                 android:orientation="horizontal"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintBottom_toBottomOf="parent"
                 android:layout_marginStart="8dp"
                 android:id="@+id/rowActions">

                <Button
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:layout_marginEnd="4dp"
                     android:textColor="@android:color/white"
                     style="@style/Widget.Material3.Button.TextButton"
                     android:id="@+id/btnLike"
                     android:text="Like" />

                <Button
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:layout_marginEnd="4dp"
                     android:textColor="@android:color/white"
                     style="@style/Widget.Material3.Button.TextButton"
                     android:id="@+id/btnDislike"
                     android:text="Dislike" />

                <Button
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:layout_marginEnd="4dp"
                     android:textColor="@android:color/white"
                     style="@style/Widget.Material3.Button.TextButton"
                     android:id="@+id/btnComments"
                     android:text="Comments" />

                <Button
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:layout_marginEnd="4dp"
                     android:textColor="@android:color/white"
                     style="@style/Widget.Material3.Button.TextButton"
                     android:id="@+id/btnSave"
                     android:text="Save" />

                <Button
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:layout_marginEnd="4dp"
                     android:textColor="@android:color/white"
                     style="@style/Widget.Material3.Button.TextButton"
                     android:id="@+id/btnShare"
                     android:text="Share" />

                <Button
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:layout_marginEnd="8dp"
                     android:textColor="@android:color/white"
                     style="@style/Widget.Material3.Button.TextButton"
                     android:id="@+id/btnMore"
                     android:text="More" />

                <View
                     android:layout_height="0dp"
                     android:layout_width="0dp"
                     android:layout_weight="1" />

                <ImageButton
                     android:layout_height="48dp"
                     android:layout_width="48dp"
                     android:contentDescription="@string/orientation_toggle"
                     android:src="@drawable/ic_fullscreen_exit"
                     android:background="?attr/selectableItemBackgroundBorderless"
                     android:id="@+id/btnOrientation" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.exoplayer2.ui.PlayerView>

    <ProgressBar
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:visibility="gone"
         android:layout_centerInParent="true"
         android:id="@+id/loadingIndicator" />

</androidx.constraintlayout.widget.ConstraintLayout>