<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:background="@android:color/black"
     tools:context=".PlayerActivity">

    <androidx.media3.ui.PlayerView
         android:layout_height="0dp"
         android:layout_width="0dp"
         app:use_controller="false"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintDimensionRatio="16:9"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         android:id="@+id/playerView">

        <androidx.constraintlayout.widget.ConstraintLayout
             android:layout_height="match_parent"
             android:layout_width="match_parent"
             android:id="@+id/controlsOverlay">

            <ImageButton
                 android:layout_height="48dp"
                 android:layout_width="48dp"
                 android:contentDescription="@string/back_button"
                 android:src="@drawable/ic_arrow_back"
                 android:background="?attr/selectableItemBackgroundBorderless"
                 app:layout_constraintTop_toTopOf="parent"
                 android:layout_margin="8dp"
                 app:tint="@android:color/white"
                 app:layout_constraintStart_toStartOf="parent"
                 android:id="@+id/btnBack" />

            <Switch
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:visibility="invisible"
                 app:layout_constraintTop_toTopOf="@id/btnBack"
                 android:textSize="12sp"
                 android:textColor="@android:color/white"
                 app:layout_constraintStart_toEndOf="@id/btnBack"
                 app:layout_constraintBottom_toBottomOf="@id/btnBack"
                 android:layout_marginStart="8dp"
                 android:id="@+id/toggleAutoplay"
                 android:text="Autoplay" />

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_marginEnd="8dp"
                 android:gravity="center_vertical"
                 app:layout_constraintTop_toTopOf="@id/btnBack"
                 android:orientation="horizontal"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintBottom_toBottomOf="@id/btnBack"
                 android:id="@+id/topActionsGroup">

                <ImageButton
                     android:layout_height="40dp"
                     android:layout_width="40dp"
                     android:layout_marginEnd="4dp"
                     android:contentDescription="@string/cast_button"
                     android:src="@drawable/ic_cast"
                     android:background="?attr/selectableItemBackgroundBorderless"
                     app:tint="@android:color/white"
                     android:id="@+id/btnCast" />

                <ImageButton
                     android:layout_height="40dp"
                     android:layout_width="40dp"
                     android:layout_marginEnd="4dp"
                     android:contentDescription="@string/cc_button"
                     android:src="@drawable/ic_cc"
                     android:background="?attr/selectableItemBackgroundBorderless"
                     app:tint="@android:color/white"
                     android:id="@+id/btnCC" />

                <ImageButton
                     android:layout_height="40dp"
                     android:layout_width="40dp"
                     android:contentDescription="@string/settings_button"
                     android:src="@drawable/ic_settings"
                     android:background="?attr/selectableItemBackgroundBorderless"
                     app:tint="@android:color/white"
                     android:id="@+id/btnSettings" />

            </LinearLayout>

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:gravity="center"
                 app:layout_constraintTop_toTopOf="parent"
                 android:orientation="horizontal"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintBottom_toBottomOf="parent"
                 android:id="@+id/centerControls">

                <ImageButton
                     android:layout_height="48dp"
                     android:layout_width="48dp"
                     android:src="@drawable/ic_replay"
                     android:scaleType="centerCrop"
                     android:contentDescription="@string/replay_10_seconds"
                     android:layout_marginEnd="40dp"
                     android:background="?attr/selectableItemBackgroundBorderless"
                     android:padding="8dp"
                     app:tint="@android:color/white"
                     android:id="@+id/btnReplay10" />

                <ImageButton
                     android:layout_height="64dp"
                     android:layout_width="64dp"
                     android:src="@drawable/ic_play_arrow"
                     android:scaleType="centerCrop"
                     android:contentDescription="@string/play_pause_button"
                     android:background="?attr/selectableItemBackgroundBorderless"
                     android:padding="12dp"
                     app:tint="@android:color/white"
                     android:id="@+id/btnPlayPause" />

                <ImageButton
                     android:layout_height="48dp"
                     android:layout_width="48dp"
                     android:scaleType="centerCrop"
                     android:contentDescription="@string/forward_10_seconds"
                     android:src="@drawable/ic_forward"
                     android:background="?attr/selectableItemBackgroundBorderless"
                     android:padding="8dp"
                     app:tint="@android:color/white"
                     android:layout_marginStart="40dp"
                     android:id="@+id/btnForward10" />

            </LinearLayout>

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="0dp"
                 android:gravity="center_vertical"
                 android:paddingVertical="8dp"
                 android:orientation="horizontal"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintBottom_toBottomOf="parent"
                 android:paddingHorizontal="16dp"
                 android:id="@+id/bottomControls">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:gravity="start"
                     android:textSize="12sp"
                     android:textColor="@android:color/white"
                     android:minWidth="40dp"
                     android:id="@+id/txtCurrentTime"
                     android:text="00:00" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:layout_marginHorizontal="4dp"
                     android:textSize="12sp"
                     android:textColor="@android:color/white"
                     android:id="@+id/txtTimeSeparator"
                     android:text=" / " />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:gravity="start"
                     android:textSize="12sp"
                     android:textColor="@android:color/white"
                     android:minWidth="40dp"
                     android:id="@+id/txtTotalTime"
                     android:text="00:00" />

                <View
                     android:layout_height="0dp"
                     android:layout_width="0dp"
                     android:layout_weight="1" />

                <ImageButton
                     android:layout_height="36dp"
                     android:layout_width="36dp"
                     android:contentDescription="@string/orientation_toggle"
                     android:src="@drawable/ic_fullscreen"
                     android:background="?attr/selectableItemBackgroundBorderless"
                     app:tint="@android:color/white"
                     android:id="@+id/btnOrientation" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.media3.ui.PlayerView>

    <SeekBar
         android:layout_height="wrap_content"
         android:layout_width="0dp"
         android:thumb="@drawable/custom_thumb"
         android:max="1000"
         android:layout_marginHorizontal="16dp"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         style="?android:attr/progressBarStyleHorizontal"
         android:layout_marginTop="12dp"
         app:layout_constraintTop_toBottomOf="@id/playerView"
         android:progressDrawable="@drawable/custom_seekbar"
         android:id="@+id/videoProgress" />

    <androidx.core.widget.NestedScrollView
         android:layout_height="0dp"
         android:layout_width="0dp"
         android:fillViewport="true"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         android:layout_marginTop="8dp"
         app:layout_constraintTop_toBottomOf="@id/videoProgress"
         android:id="@+id/contentScrollView">

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:orientation="vertical"
             android:paddingBottom="16dp">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:orientation="vertical"
                 android:paddingHorizontal="16dp"
                 android:id="@+id/videoInfoContainer"
                 android:paddingTop="16dp">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                     android:ellipsize="end"
                     android:textSize="16sp"
                     android:textColor="@android:color/white"
                     android:maxLines="2"
                     android:lineSpacingExtra="2dp"
                     android:id="@+id/txtTitle"
                     android:text="Video Title Goes Here"
                     android:textStyle="bold" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:textSize="12sp"
                     android:textColor="#B3B3B3"
                     android:layout_marginTop="8dp"
                     android:id="@+id/txtMeta"
                     android:text="1,234,567 views • 2 days ago" />

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:paddingVertical="16dp"
                 android:paddingHorizontal="16dp"
                 android:id="@+id/channelInfoContainer">

                <ImageView
                     android:layout_height="48dp"
                     android:layout_width="48dp"
                     android:src="@drawable/ic_avatar_placeholder"
                     
                     android:scaleType="centerCrop"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintBottom_toBottomOf="parent"
                     android:id="@+id/imgChannelAvatar" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="0dp"
                     android:layout_marginEnd="8dp"
                     app:layout_constraintTop_toTopOf="@id/imgChannelAvatar"
                     android:textSize="14sp"
                     android:textColor="@android:color/white"
                     app:layout_constraintStart_toEndOf="@id/imgChannelAvatar"
                     app:layout_constraintEnd_toStartOf="@id/btnSubscribe"
                     android:layout_marginStart="12dp"
                     android:id="@+id/txtChannelName"
                     android:text="Channel Name"
                     android:textStyle="bold" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="0dp"
                     app:layout_constraintStart_toStartOf="@id/txtChannelName"
                     android:textSize="11sp"
                     app:layout_constraintEnd_toEndOf="@id/txtChannelName"
                     android:textColor="#B3B3B3"
                     app:layout_constraintBottom_toBottomOf="@id/imgChannelAvatar"
                     app:layout_constraintTop_toBottomOf="@id/txtChannelName"
                     android:id="@+id/txtSubscriberCount"
                     android:text="1.23M subscribers" />

                <com.google.android.material.button.MaterialButton
                     android:layout_height="36dp"
                     android:layout_width="wrap_content"
                     app:layout_constraintTop_toTopOf="parent"
                     android:textSize="12sp"
                     android:backgroundTint="@android:color/holo_red_dark"
                     android:textColor="@android:color/white"
                     app:layout_constraintEnd_toEndOf="parent"
                     style="@style/Widget.Material3.Button"
                     app:layout_constraintBottom_toBottomOf="parent"
                     android:minWidth="80dp"
                     android:id="@+id/btnSubscribe"
                     android:text="Subscribe" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <HorizontalScrollView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:scrollbars="none"
                 android:fadingEdge="horizontal"
                 android:fadingEdgeLength="16dp"
                 android:layout_marginTop="8dp"
                 android:id="@+id/actionsScrollView">

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:gravity="center_vertical"
                     android:orientation="horizontal"
                     android:paddingHorizontal="16dp"
                     android:id="@+id/rowActions">

                    <LinearLayout
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:layout_marginEnd="24dp"
                         android:gravity="center"
                         android:orientation="vertical">

                        <ImageButton
                             android:layout_height="40dp"
                             android:layout_width="40dp"
                             android:src="@drawable/ic_thumb_up"
                             android:contentDescription="like_button"
                             android:background="?attr/selectableItemBackgroundBorderless"
                             app:tint="@android:color/white"
                             android:id="@+id/btnLike" />

                        <TextView
                             android:layout_height="wrap_content"
                             android:layout_width="wrap_content"
                             android:gravity="center"
                             android:textSize="10sp"
                             android:textColor="@android:color/white"
                             android:layout_marginTop="2dp"
                             android:id="@+id/txtLikeCount"
                             android:text="123K" />

                    </LinearLayout>

                    <LinearLayout
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:layout_marginEnd="24dp"
                         android:gravity="center"
                         android:orientation="vertical">

                        <ImageButton
                             android:layout_height="40dp"
                             android:layout_width="40dp"
                             android:src="@drawable/ic_thumb_down"
                             android:contentDescription="dislike_button"
                             android:background="?attr/selectableItemBackgroundBorderless"
                             app:tint="@android:color/white"
                             android:id="@+id/btnDislike" />

                        <TextView
                             android:layout_height="wrap_content"
                             android:layout_width="wrap_content"
                             android:gravity="center"
                             android:textSize="10sp"
                             android:textColor="@android:color/white"
                             android:layout_marginTop="2dp"
                             android:text="Dislike" />

                    </LinearLayout>

                    <LinearLayout
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:layout_marginEnd="24dp"
                         android:gravity="center"
                         android:orientation="vertical">

                        <ImageButton
                             android:layout_height="40dp"
                             android:layout_width="40dp"
                             android:src="@drawable/ic_share"
                             android:contentDescription="share_button"
                             android:background="?attr/selectableItemBackgroundBorderless"
                             app:tint="@android:color/white"
                             android:id="@+id/btnShare" />

                        <TextView
                             android:layout_height="wrap_content"
                             android:layout_width="wrap_content"
                             android:gravity="center"
                             android:textSize="10sp"
                             android:textColor="@android:color/white"
                             android:layout_marginTop="2dp"
                             android:text="Share" />

                    </LinearLayout>

                    <LinearLayout
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:layout_marginEnd="24dp"
                         android:gravity="center"
                         android:orientation="vertical">

                        <ImageButton
                             android:layout_height="40dp"
                             android:layout_width="40dp"
                             android:src="@drawable/ic_download"
                             android:contentDescription="download_button"
                             android:background="?attr/selectableItemBackgroundBorderless"
                             app:tint="@android:color/white"
                             android:id="@+id/btnDownload" />

                        <TextView
                             android:layout_height="wrap_content"
                             android:layout_width="wrap_content"
                             android:gravity="center"
                             android:textSize="10sp"
                             android:textColor="@android:color/white"
                             android:layout_marginTop="2dp"
                             android:text="Download" />

                    </LinearLayout>

                    <LinearLayout
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:gravity="center"
                         android:orientation="vertical">

                        <ImageButton
                             android:layout_height="40dp"
                             android:layout_width="40dp"
                             android:src="@drawable/ic_bookmark"
                             android:contentDescription="save_button"
                             android:background="?attr/selectableItemBackgroundBorderless"
                             app:tint="@android:color/white"
                             android:id="@+id/btnSave" />

                        <TextView
                             android:layout_height="wrap_content"
                             android:layout_width="wrap_content"
                             android:gravity="center"
                             android:textSize="10sp"
                             android:textColor="@android:color/white"
                             android:layout_marginTop="2dp"
                             android:text="Save" />

                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:gravity="center_vertical"
                 android:background="?attr/selectableItemBackground"
                 android:paddingVertical="12dp"
                 android:orientation="horizontal"
                 android:layout_marginTop="16dp"
                 android:paddingHorizontal="16dp"
                 android:id="@+id/commentsHeader">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="0dp"
                     android:textSize="14sp"
                     android:textColor="@android:color/white"
                     android:layout_weight="1"
                     android:id="@+id/txtCommentsCount"
                     android:text="Comments • 1,234"
                     android:textStyle="bold" />

                <ImageButton
                     android:layout_height="32dp"
                     android:layout_width="32dp"
                     android:src="@drawable/ic_keyboard_arrow_down"
                     android:contentDescription="@string/expand_comments"
                     android:background="?attr/selectableItemBackgroundBorderless"
                     app:tint="@android:color/white"
                     android:id="@+id/btnCommentsExpand" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:nestedScrollingEnabled="false"
                 android:paddingHorizontal="8dp"
                 android:id="@+id/rvContent" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <ProgressBar
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:visibility="gone"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         android:indeterminateTint="@android:color/white"
         android:id="@+id/loadingIndicator" />

</androidx.constraintlayout.widget.ConstraintLayout>