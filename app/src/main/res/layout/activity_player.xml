<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#0F0F0F"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <!-- Video Player Container - Enhanced with better aspect ratio -->
        <FrameLayout
            android:layout_height="250dp"
            android:layout_width="match_parent"
            android:background="#000000"
            android:id="@+id/videoPlayerContainer"
            app:layout_constraintDimensionRatio="16:9">

            <com.google.android.exoplayer2.ui.PlayerView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                app:use_controller="false"
                app:resize_mode="fit"
                android:id="@+id/exoPlayerView" />

            <!-- Enhanced Video Controls Overlay -->
            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@drawable/video_overlay_gradient"
                android:id="@+id/videoControlsOverlay">

                <!-- Center Play Controls - Improved touch targets -->
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_height="56dp"
                        android:layout_width="56dp"
                        android:layout_marginEnd="48dp"
                        android:src="@drawable/ic_replay_10"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="12dp"
                        app:tint="#FFFFFF"
                        android:contentDescription="Previous video"
                        android:id="@+id/previousButton" />

                    <ImageView
                        android:layout_height="72dp"
                        android:layout_width="72dp"
                        android:src="@drawable/ic_play_circle_filled"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="8dp"
                        app:tint="#FFFFFF"
                        android:contentDescription="Play/Pause"
                        android:id="@+id/centerPlayButton" />

                    <ImageView
                        android:layout_height="56dp"
                        android:layout_width="56dp"
                        android:src="@drawable/ic_forward_10"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="12dp"
                        app:tint="#FFFFFF"
                        android:layout_marginStart="48dp"
                        android:contentDescription="Next video"
                        android:id="@+id/nextButton" />

                </LinearLayout>

                <!-- Enhanced Bottom Controls -->
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@android:color/transparent"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/bottomControls">

                    <!-- Improved SeekBar -->
                    <SeekBar
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="12dp"
                        android:progressBackgroundTint="#40FFFFFF"
                        android:thumbTint="#FF0000"
                        android:progressTint="#FF0000"
                        android:secondaryProgressTint="#80FF0000"
                        android:minHeight="4dp"
                        android:id="@+id/seekBar" />

                    <!-- Enhanced Control Row -->
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:fontFamily="monospace"
                            android:id="@+id/timeDisplay"
                            android:text="0:10 / 2:29:35" />

                        <Space
                            android:layout_height="1dp"
                            android:layout_width="0dp"
                            android:layout_weight="1" />

                        <!-- Quality/Settings Button -->
                        <ImageButton
                            android:layout_height="40dp"
                            android:layout_width="40dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_settings"
                            android:background="@drawable/control_button_background"
                            app:tint="#FFFFFF"
                            android:contentDescription="Settings"
                            android:id="@+id/settingsButton" />

                        <!-- Fullscreen Button -->
                        <ImageButton
                            android:layout_height="40dp"
                            android:layout_width="40dp"
                            android:src="@drawable/ic_fullscreen"
                            android:background="@drawable/control_button_background"
                            app:tint="#FFFFFF"
                            android:contentDescription="Fullscreen"
                            android:id="@+id/fullscreenButton" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <!-- Loading Indicator -->
            <ProgressBar
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:indeterminateTint="#FF0000"
                android:id="@+id/progressBar"
                android:layout_gravity="center" />

        </FrameLayout>

        <!-- Video Details Container - Enhanced spacing and typography -->
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/videoDetailsContainer">

            <!-- Video Title Section - Improved layout -->
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:ellipsize="end"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:lineSpacingMultiplier="1.2"
                        android:maxLines="2"
                        android:layout_weight="1"
                        android:id="@+id/videoTitle"
                        android:text="Video Title" />

                    <ImageButton
                        android:layout_height="40dp"
                        android:layout_width="40dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_expand_more"
                        android:background="@drawable/icon_button_background"
                        app:tint="#AAAAAA"
                        android:contentDescription="Expand title"
                        android:id="@+id/expandTitleButton" />

                </LinearLayout>

                <!-- Video Stats - Enhanced layout -->
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#AAAAAA"
                        android:id="@+id/viewCount"
                        android:text="2.2K views" />

                    <View
                        android:layout_height="4dp"
                        android:layout_width="4dp"
                        android:background="@drawable/dot_separator"
                        android:layout_marginHorizontal="12dp" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#AAAAAA"
                        android:id="@+id/uploadTime"
                        android:text="5 hours ago" />

                </LinearLayout>

            </LinearLayout>

            <!-- Action Buttons - Enhanced with better spacing -->
            <HorizontalScrollView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="20dp"
                    android:paddingHorizontal="20dp">

                    <!-- Like/Dislike Combined Button - Enhanced -->
                    <LinearLayout
                        android:layout_height="48dp"
                        android:layout_width="140dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/combined_action_button_background"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_height="match_parent"
                            android:layout_width="0dp"
                            android:background="@drawable/like_button_background"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:id="@+id/likeButton">

                            <ImageView
                                android:layout_height="20dp"
                                android:layout_width="20dp"
                                android:layout_marginEnd="6dp"
                                android:src="@drawable/ic_thumb_up_outline"
                                app:tint="#FFFFFF" />

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:textSize="14sp"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:id="@+id/likeCount"
                                android:text="460" />

                        </LinearLayout>

                        <View
                            android:layout_height="24dp"
                            android:layout_width="1dp"
                            android:background="#333333"
                            android:layout_gravity="center_vertical" />

                        <LinearLayout
                            android:layout_height="match_parent"
                            android:layout_width="48dp"
                            android:background="@drawable/dislike_button_background"
                            android:gravity="center"
                            android:id="@+id/dislikeButton">

                            <ImageView
                                android:layout_height="20dp"
                                android:layout_width="20dp"
                                android:src="@drawable/ic_thumb_down_outline"
                                app:tint="#FFFFFF" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Share Button - Enhanced -->
                    <LinearLayout
                        android:layout_height="48dp"
                        android:layout_width="100dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/action_button_background"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:id="@+id/shareButton">

                        <ImageView
                            android:layout_height="20dp"
                            android:layout_width="20dp"
                            android:layout_marginEnd="6dp"
                            android:src="@drawable/ic_share_outline"
                            app:tint="#FFFFFF" />

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:text="Share" />

                    </LinearLayout>

                    <!-- Download Button - Enhanced -->
                    <LinearLayout
                        android:layout_height="48dp"
                        android:layout_width="120dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/action_button_background"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:id="@+id/downloadButton">

                        <ImageView
                            android:layout_height="20dp"
                            android:layout_width="20dp"
                            android:layout_marginEnd="6dp"
                            android:src="@drawable/ic_download_outline"
                            app:tint="#FFFFFF" />

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:text="Download" />

                    </LinearLayout>

                    <!-- Save Button - New addition -->
                    <LinearLayout
                        android:layout_height="48dp"
                        android:layout_width="80dp"
                        android:background="@drawable/action_button_background"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:id="@+id/saveButton">

                        <ImageView
                            android:layout_height="20dp"
                            android:layout_width="20dp"
                            android:layout_marginEnd="6dp"
                            android:src="@drawable/ic_favorite"
                            app:tint="#FFFFFF" />

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:text="Save" />

                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>

            <!-- Channel Information - Enhanced layout -->
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:paddingVertical="16dp"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_height="48dp"
                    android:layout_width="48dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/default_channel_avatar"
                    android:id="@+id/channelAvatar" />

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:id="@+id/channelName"
                        android:text="Channel Name" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="13sp"
                        android:textColor="#AAAAAA"
                        android:layout_marginTop="2dp"
                        android:id="@+id/subscriberCount"
                        android:text="45.5K subscribers" />

                </LinearLayout>

                <!-- Enhanced Subscribe Button -->
                <Button
                    android:layout_height="40dp"
                    android:layout_width="wrap_content"
                    android:background="@drawable/subscribe_button_background"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:paddingHorizontal="20dp"
                    android:minWidth="100dp"
                    android:id="@+id/subscribeButton"
                    android:text="Subscribe" />

            </LinearLayout>

            <!-- Comments Section - Enhanced -->
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingTop="8dp">

                <!-- Comments Header -->
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:paddingVertical="12dp"
                    android:orientation="horizontal"
                    android:background="?attr/selectableItemBackground"
                    android:id="@+id/commentsHeader">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:text="Comments" />

                    <Space
                        android:layout_height="1dp"
                        android:layout_width="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#AAAAAA"
                        android:layout_marginEnd="8dp"
                        android:id="@+id/commentCount"
                        android:text="1.2K" />

                    <ImageView
                        android:layout_height="20dp"
                        android:layout_width="20dp"
                        android:src="@drawable/ic_expand_more"
                        app:tint="#AAAAAA"
                        android:id="@+id/expandCommentsIcon" />

                </LinearLayout>

                <!-- Comments Preview -->
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="20dp"
                    android:id="@+id/commentsPreview">

                    <!-- Sample Comment -->
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_height="32dp"
                            android:layout_width="32dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/default_user_avatar" />

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:textSize="13sp"
                                    android:textColor="#FFFFFF"
                                    android:textStyle="bold"
                                    android:text="@username" />

                                <TextView
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:textSize="12sp"
                                    android:textColor="#AAAAAA"
                                    android:layout_marginStart="8dp"
                                    android:text="2 hours ago" />

                            </LinearLayout>

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:textSize="14sp"
                                android:textColor="#FFFFFF"
                                android:layout_marginTop="4dp"
                                android:lineSpacingMultiplier="1.2"
                                android:text="Great video! Really helpful content." />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
