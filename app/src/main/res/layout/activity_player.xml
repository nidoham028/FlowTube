<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:background="@android:color/black">

    <com.google.android.exoplayer2.ui.PlayerView
         android:layout_height="0dp"
         android:layout_width="0dp"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintDimensionRatio="16:9"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         android:id="@+id/playerView">

        <androidx.constraintlayout.widget.ConstraintLayout
             android:layout_height="match_parent"
             android:layout_width="match_parent">

            <!-- Top Navigation -->
            <ImageButton
                 android:layout_height="48dp"
                 android:layout_width="48dp"
                 android:contentDescription="@string/back_button"
                 android:src="@drawable/ic_arrow_back"
                 android:background="?attr/selectableItemBackgroundBorderless"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintStart_toStartOf="parent"
                 android:layout_marginTop="8dp"
                 android:layout_marginStart="8dp"
                 android:id="@+id/btnBack" />

            <Switch
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 app:layout_constraintTop_toTopOf="@id/btnBack"
                 android:textColor="@android:color/white"
                 app:layout_constraintStart_toEndOf="@id/btnBack"
                 app:layout_constraintBottom_toBottomOf="@id/btnBack"
                 android:layout_marginStart="8dp"
                 android:id="@+id/toggleAutoplay"
                 android:text="Autoplay" />

            <!-- Top Right Controls -->
            <ImageButton
                 android:layout_height="48dp"
                 android:layout_width="48dp"
                 android:layout_marginEnd="8dp"
                 android:contentDescription="@string/cast_button"
                 android:src="@drawable/ic_cast"
                 android:background="?attr/selectableItemBackgroundBorderless"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintEnd_toStartOf="@id/btnCC"
                 android:layout_marginTop="8dp"
                 android:id="@+id/btnCast" />

            <ImageButton
                 android:layout_height="48dp"
                 android:layout_width="48dp"
                 android:layout_marginEnd="8dp"
                 android:contentDescription="@string/cc_button"
                 android:src="@drawable/ic_cc"
                 android:background="?attr/selectableItemBackgroundBorderless"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintEnd_toStartOf="@id/btnSettings"
                 android:layout_marginTop="8dp"
                 android:id="@+id/btnCC" />

            <ImageButton
                 android:layout_height="48dp"
                 android:layout_width="48dp"
                 android:layout_marginEnd="8dp"
                 android:contentDescription="@string/settings_button"
                 android:src="@drawable/ic_settings"
                 android:background="?attr/selectableItemBackgroundBorderless"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintEnd_toEndOf="parent"
                 android:layout_marginTop="8dp"
                 android:id="@+id/btnSettings" />

            <!-- Center Play Controls -->
            <ImageButton
                 android:layout_height="48dp"
                 android:layout_width="48dp"
                 android:scaleType="centerCrop"
                 android:padding="8dp"
                 android:layout_marginTop="60dp"
                 android:contentDescription="@string/replay_10_seconds"
                 android:src="@drawable/ic_replay"
                 android:background="?attr/selectableItemBackgroundBorderless"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintEnd_toStartOf="@id/btnPlayPause"
                 app:layout_constraintBottom_toTopOf="@id/txtCurrentTime"
                 app:layout_constraintHorizontal_chainStyle="packed"
                 android:id="@+id/btnReplay10" />

            <ImageButton
                 android:layout_height="55dp"
                 android:layout_width="55dp"
                 android:padding="8dp"
                 android:layout_marginStart="60dp"
                 android:layout_marginEnd="60dp"
                 android:contentDescription="@string/play_pause_button"
                 android:scaleType="centerCrop"
                 android:src="@drawable/ic_play_arrow"
                 android:background="?attr/selectableItemBackgroundBorderless"
                 app:layout_constraintTop_toTopOf="@id/btnReplay10"
                 app:layout_constraintStart_toEndOf="@id/btnReplay10"
                 app:layout_constraintEnd_toStartOf="@id/btnForward10"
                 app:layout_constraintBottom_toBottomOf="@id/btnReplay10"
                 android:id="@+id/btnPlayPause" />

            <ImageButton
                 android:layout_height="48dp"
                 android:layout_width="48dp"
                 android:padding="8dp"
                 android:scaleType="centerCrop"
                 android:contentDescription="@string/forward_10_seconds"
                 android:src="@drawable/ic_forward"
                 android:background="?attr/selectableItemBackgroundBorderless"
                 app:layout_constraintTop_toTopOf="@id/btnReplay10"
                 app:layout_constraintStart_toEndOf="@id/btnPlayPause"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintBottom_toBottomOf="@id/btnReplay10"
                 android:id="@+id/btnForward10" />

            <!-- Bottom Controls -->
            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_marginBottom="8dp"
                 app:layout_constraintStart_toStartOf="parent"
                 android:textColor="@android:color/white"
                 app:layout_constraintBottom_toBottomOf="parent"
                 android:layout_marginStart="8dp"
                 android:id="@+id/txtCurrentTime"
                 android:text="00:00" />

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_marginBottom="8dp"
                 android:textColor="@android:color/white"
                 app:layout_constraintStart_toEndOf="@id/txtCurrentTime"
                 app:layout_constraintBottom_toBottomOf="parent"
                 android:layout_marginStart="8dp"
                 android:id="@+id/txtRemainingTime"
                 android:text="-00:00" />

            <ImageButton
                 android:layout_height="48dp"
                 android:layout_width="48dp"
                 android:layout_marginBottom="8dp"
                 android:layout_marginEnd="8dp"
                 android:contentDescription="@string/orientation_toggle"
                 android:src="@drawable/ic_fullscreen"
                 android:background="?attr/selectableItemBackgroundBorderless"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintBottom_toBottomOf="parent"
                 android:id="@+id/btnOrientation" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.exoplayer2.ui.PlayerView>

    <!-- Video Progress Bar -->
    <SeekBar
         android:layout_height="wrap_content"
         android:layout_width="0dp"
         android:layout_marginStart="16dp"
         android:layout_marginEnd="16dp"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         style="?android:attr/progressBarStyleHorizontal"
         android:layout_marginTop="8dp"
         app:layout_constraintTop_toBottomOf="@id/playerView"
         android:id="@+id/videoProgress" />

    <!-- Video Title -->
    <TextView
         android:layout_height="wrap_content"
         android:layout_width="0dp"
         android:layout_marginStart="16dp"
         android:layout_marginEnd="16dp"
         android:ellipsize="end"
         android:textSize="18sp"
         android:textColor="@android:color/white"
         android:layout_marginTop="16dp"
         app:layout_constraintTop_toBottomOf="@id/videoProgress"
         android:textAppearance="@style/TextAppearance.AppCompat.Large"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         android:maxLines="2"
         android:id="@+id/txtTitle"
         android:text="Video Title Goes Here"
         android:textStyle="bold" />

    <!-- Video Metadata -->
    <TextView
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         app:layout_constraintStart_toStartOf="parent"
         android:textSize="13sp"
         android:textColor="@android:color/darker_gray"
         android:layout_marginTop="8dp"
         android:layout_marginStart="16dp"
         app:layout_constraintTop_toBottomOf="@id/txtTitle"
         android:id="@+id/txtMeta"
         android:text="1,234,567 views • 2 days ago" />

    <!-- Channel Row -->
    <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_height="wrap_content"
         android:layout_width="0dp"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         android:layout_marginTop="16dp"
         app:layout_constraintTop_toBottomOf="@id/txtMeta"
         android:id="@+id/rowChannel">

        <ImageView
             android:layout_height="48dp"
             android:layout_width="48dp"
             android:contentDescription="@string/channel_avatar"
             android:src="@drawable/ic_avatar_placeholder"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             android:layout_marginStart="16dp"
             android:id="@+id/imgAvatar" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="0dp"
             app:layout_constraintTop_toTopOf="@id/imgAvatar"
             android:textColor="@android:color/white"
             app:layout_constraintStart_toEndOf="@id/imgAvatar"
             app:layout_constraintEnd_toStartOf="@id/btnSubscribe"
             android:layout_marginStart="16dp"
             android:layout_marginEnd="8dp"
             android:id="@+id/txtChannelName"
             android:text="Channel Name"
             android:textStyle="bold" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="0dp"
             app:layout_constraintStart_toStartOf="@id/txtChannelName"
             app:layout_constraintEnd_toEndOf="@id/txtChannelName"
             android:textSize="12sp"
             android:textColor="@android:color/darker_gray"
             app:layout_constraintTop_toBottomOf="@id/txtChannelName"
             android:id="@+id/txtSubscriberCount"
             android:text="1.23M subscribers" />

        <Button
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:layout_marginEnd="16dp"
             app:layout_constraintTop_toTopOf="parent"
             android:backgroundTint="@android:color/holo_red_dark"
             android:textColor="@android:color/white"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             android:id="@+id/btnSubscribe"
             android:text="Subscribe" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Action Buttons Horizontal Scroll -->
    <HorizontalScrollView
         android:layout_height="wrap_content"
         android:layout_width="0dp"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         android:layout_marginTop="16dp"
         app:layout_constraintTop_toBottomOf="@id/rowChannel"
         android:id="@+id/rowActionsScroll">

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:paddingStart="16dp"
             android:paddingEnd="16dp"
             android:orientation="horizontal"
             android:gravity="center_vertical"
             android:id="@+id/rowActions">

            <Button
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 style="@style/Widget.Material3.Button.TextButton"
                 android:textColor="@android:color/white"
                 android:id="@+id/btnLike"
                 android:text="Like" />

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:textColor="@android:color/white"
                 android:layout_marginStart="4dp"
                 android:textSize="12sp"
                 android:id="@+id/txtLikeCount"
                 android:text="123K" />

            <Button
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_marginStart="16dp"
                 style="@style/Widget.Material3.Button.TextButton"
                 android:textColor="@android:color/white"
                 android:id="@+id/btnDislike"
                 android:text="Dislike" />

            <Button
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_marginStart="16dp"
                 style="@style/Widget.Material3.Button.TextButton"
                 android:textColor="@android:color/white"
                 android:id="@+id/btnShare"
                 android:text="Share" />

            <Button
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_marginStart="16dp"
                 style="@style/Widget.Material3.Button.TextButton"
                 android:textColor="@android:color/white"
                 android:id="@+id/btnDownload"
                 android:text="Download" />

            <Button
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_marginStart="16dp"
                 style="@style/Widget.Material3.Button.TextButton"
                 android:textColor="@android:color/white"
                 android:id="@+id/btnSave"
                 android:text="Save" />

        </LinearLayout>

    </HorizontalScrollView>

    <!-- Comments Section Header -->
    <TextView
         android:layout_height="wrap_content"
         android:layout_width="0dp"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toStartOf="@id/btnCommentsExpand"
         android:textColor="@android:color/white"
         android:layout_marginTop="16dp"
         android:layout_marginStart="16dp"
         android:layout_marginEnd="8dp"
         app:layout_constraintTop_toBottomOf="@id/rowActionsScroll"
         android:id="@+id/txtCommentsCount"
         android:text="Comments • count"
         android:textStyle="bold" />

    <ImageView
         android:layout_height="24dp"
         android:layout_width="24dp"
         android:layout_marginEnd="16dp"
         android:contentDescription="@string/expand_comments"
         android:src="@drawable/ic_arrow_down"
         app:layout_constraintTop_toTopOf="@id/txtCommentsCount"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toBottomOf="@id/txtCommentsCount"
         android:id="@+id/btnCommentsExpand" />

    <!-- Related Videos / Comments RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
         android:layout_height="0dp"
         android:layout_width="0dp"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         android:layout_marginTop="8dp"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintTop_toBottomOf="@id/txtCommentsCount"
         android:id="@+id/rvRelated" />

</androidx.constraintlayout.widget.ConstraintLayout>